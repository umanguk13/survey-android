<resources>

    <style name="AppThemeNoActionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:actionMenuTextColor">@color/color_black</item>
        <item name="android:textColorPrimary">@color/color_black</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="colorControlActivated">@color/color_black</item>
        <item name="colorControlNormal">@color/color_black</item>
    </style>

    <style name="AppThemeNoActionbarFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_white</item>
        <item name="android:actionMenuTextColor">@color/color_white</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="DateStyle" parent="Theme.MaterialComponents.Dialog">

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/color_blue</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:homeAsUpIndicator">@drawable/left_arrow</item>
        <item name="homeAsUpIndicator">@drawable/left_arrow</item>
        <item name="actionMenuTextColor">@color/color_white</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextviewLoginLbl">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_40sdp</item>
        <item name="android:layout_marginEnd">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="EdittextVerifycode">
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:background">@drawable/shape_rounded_background_profile</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:digits">0123456789qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM
        </item>
    </style>

    <style name="EdittextLogin">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">phone</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

</resources>
