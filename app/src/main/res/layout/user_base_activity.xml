<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/user_base_activity_rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/user_base_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/ToolbarTheme">

            <RelativeLayout
                android:id="@+id/user_base_activity_rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_base_activity_toolbar_imageview_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/menus"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/user_base_activity_toolbar_textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/user_base_activity_linear_right_icons"
                    android:layout_toEndOf="@+id/user_base_activity_toolbar_imageview_menu"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_launcher_background"
                    android:text="LOGO"
                    android:textSize="@dimen/_15sdp"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/user_base_activity_linear_right_icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_launcher_background"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/user_base_activity_fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/user_base_activity_toolbar" />

    </RelativeLayout>

</layout>