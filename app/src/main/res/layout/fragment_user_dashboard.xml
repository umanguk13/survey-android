<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_user_dashboard_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/custom_tab_layout_background"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="0dp"
        app:tabSelectedTextColor="@color/color_white"
        app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_user_dashboard_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_user_dashboard_tab_layout" />

</RelativeLayout>
